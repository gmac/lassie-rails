<% content_for :breadcrumbs do %>
  <li><%= link_to 'Inventory', project_inventory_path(@project) %></li>
  <li><%= link_to 'Items', project_inventory_items_path(@project) %></li>
  <li><%= @item.slug %></li>
<% end %>

<% content_for :header do %>
  <h1><%= @item.slug %></h1>
  <%= link_to 'Edit', edit_project_inventory_item_path(@project, @item) %>
<% end %>

<% content_for :content do %>
  <ul>
    <li><%= @item.name %></li>
    <li><%= @item.slug %></li>
  </ul>
  <p><%= link_to "Manage behaviors (#{ @item.behaviors.count })", behavioral_api(@item) %></p>
<% end %>